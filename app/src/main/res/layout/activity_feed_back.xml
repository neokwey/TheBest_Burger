<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_feedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customerPanel.FeedBack"
    android:background="#233248" >

    <com.hsalf.smileyrating.SmileyRating
        android:id="@+id/smile_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="327dp"
        android:layout_height="185dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="41dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:gravity="start"
        android:hint="Write down your feedback..."
        android:inputType="textMultiLine"
        android:textAlignment="gravity"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smile_rating" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="115dp"
        android:layout_height="65dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/button_shape"
        android:text="Clear"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_submit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="115dp"
        android:layout_height="65dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/button_shape"
        android:text="SUBMIT"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_clear"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="84dp"
        android:text="How satisfied are you with this food delivery app?"
        android:textColor="@android:color/background_light"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>